<Window x:Class="DungeonRampageCheat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dungeon Rampage Cheat" 
        Height="750" Width="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#0078D4"/>
        <SolidColorBrush x:Key="AccentColor" Color="#00CC6A"/>
        <SolidColorBrush x:Key="DangerColor" Color="#E81123"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#2D2D30"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#CCCCCC"/>

        <Style x:Key="ModernToggle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="50" Height="26" 
                                    CornerRadius="13"
                                    Margin="0,0,10,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Background" Value="#00CC6A"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Ellipse Width="22" Height="22"
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="2,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="0"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(TranslateTransform.X)"
                                                                               To="24" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(TranslateTransform.X)"
                                                                               To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </Border>

                            <TextBlock Grid.Column="1" 
                                       Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MasterToggle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="60" Height="30" 
                                    CornerRadius="15"
                                    Margin="0,0,10,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Background" Value="#0078D4"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Ellipse Width="26" Height="26"
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="2,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="0"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(TranslateTransform.X)"
                                                                               To="30" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(TranslateTransform.X)"
                                                                               To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </Border>

                            <TextBlock Grid.Column="1" 
                                       Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" 
                                    Background="#252526" 
                                    Margin="2,0" 
                                    CornerRadius="6,6,0,0"
                                    BorderThickness="1,1,1,0"
                                    BorderBrush="#3A3A3C">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="15,8"/>
                            </Border>
                            <Border Background="{StaticResource PrimaryColor}" 
                                    Height="3" 
                                    VerticalAlignment="Bottom"
                                    CornerRadius="2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎮 Dungeon Rampage Cheat" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Early Access Testing Tool" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox x:Name="ProcessNameTextBox" 
                             Width="200"
                             Height="35"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Background="#3A3A3C"
                             Foreground="White"
                             BorderBrush="{StaticResource PrimaryColor}"
                             BorderThickness="1"
                             Padding="10,0"
                             Text="Dungeon Rampage Early Access"
                             Margin="0,0,10,0"/>

                    <Button x:Name="AttachButton" 
                            Content="🔌 Attach"
                            Style="{StaticResource ModernButton}"
                            Click="AttachButton_Click"
                            Width="100"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <TabControl Background="Transparent" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabPanel">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                </TabControl.Resources>
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem" BasedOn="{StaticResource TabItemStyle}"/>
                </TabControl.ItemContainerStyle>

                <TabItem Header="🗺️ WallHack">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Background="{StaticResource SurfaceColor}" 
                                CornerRadius="10"
                                Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="🗺️ Map Controls" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,15"/>

                                <Border Grid.Row="1" 
                                        Background="#3A3A3C" 
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="0,0,0,15">
                                    <CheckBox x:Name="MasterToggle"
                                              Content="🎯 Enable All Maps"
                                              Style="{StaticResource MasterToggle}"
                                              Checked="MasterToggle_Checked"
                                              Unchecked="MasterToggle_Unchecked"
                                              IsEnabled="False"/>
                                </Border>

                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="MapsPanel">
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" 
                                Background="{StaticResource SurfaceColor}" 
                                CornerRadius="10"
                                Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="📋 Activity Log" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,15"/>

                                <Border Grid.Row="1" 
                                        Background="#252526" 
                                        CornerRadius="6"
                                        BorderBrush="#3A3A3C"
                                        BorderThickness="1">
                                    <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                                        <TextBlock x:Name="LogTextBlock"
                                                   TextWrapping="Wrap"
                                                   Padding="10"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   Foreground="#CCCCCC"
                                                   Text="Ready to start..."/>
                                    </ScrollViewer>
                                </Border>

                                <Grid Grid.Row="2" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            x:Name="ClearLogButton"
                                            Content="🗑️ Clear"
                                            Style="{StaticResource ModernButton}"
                                            Background="#3A3A3C"
                                            Click="ClearLogButton_Click"/>

                                    <Button Grid.Column="2"
                                            x:Name="CopyLogButton"
                                            Content="📋 Copy"
                                            Style="{StaticResource ModernButton}"
                                            Background="#0078D4"
                                            Click="CopyLogButton_Click"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="⚡ Misc">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <Border Background="#1E1E1E" BorderBrush="#007ACC" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="🚀 Speed Hack - Ranger" FontSize="18" FontWeight="Bold" 
                                               Foreground="#00D4FF" Margin="0,0,0,10"/>

                                    <Border Background="#4A2020" BorderBrush="#FF4444" BorderThickness="1" 
                                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="⚠️" FontSize="16" Foreground="#FF4444" 
                                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Only works with RANGER class!" 
                                                       FontSize="12" Foreground="#FFCCCC" 
                                                       VerticalAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock x:Name="SpeedRangerStatusText" 
                                               Text="Status: Not scanned" 
                                               FontSize="12" Foreground="#CCCCCC" 
                                               Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" 
                                                Content="🔍 Scan Speed" 
                                                Click="ScanSpeedRangerButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#0066CC"/>

                                        <Button Grid.Column="2" 
                                                x:Name="ToggleSpeedRangerButton"
                                                Content="▶️ Enable Speed" 
                                                Click="ToggleSpeedRangerButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#2D7D2D"
                                                IsEnabled="False"/>
                                    </Grid>

                                    <TextBlock x:Name="SpeedRangerInfoText" 
                                               Text="Scan first to enable speed hack" 
                                               FontSize="11" Foreground="#888888" 
                                               Margin="0,10,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#1E1E1E" BorderBrush="#FF4500" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="⚔️ Speed Hack - Berserker" FontSize="18" FontWeight="Bold" 
                                               Foreground="#FF6347" Margin="0,0,0,10"/>

                                    <Border Background="#4A2020" BorderBrush="#FF4444" BorderThickness="1" 
                                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="⚠️" FontSize="16" Foreground="#FF4444" 
                                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Only works with BERSERKER class!" 
                                                       FontSize="12" Foreground="#FFCCCC" 
                                                       VerticalAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock x:Name="SpeedBerserkerStatusText" 
                                               Text="Status: Not scanned" 
                                               FontSize="12" Foreground="#CCCCCC" 
                                               Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" 
                                                Content="🔍 Scan Speed" 
                                                Click="ScanSpeedBerserkerButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#0066CC"/>

                                        <Button Grid.Column="2" 
                                                x:Name="ToggleSpeedBerserkerButton"
                                                Content="▶️ Enable Speed" 
                                                Click="ToggleSpeedBerserkerButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#2D7D2D"
                                                IsEnabled="False"/>
                                    </Grid>

                                    <TextBlock x:Name="SpeedBerserkerInfoText" 
                                               Text="Scan first to enable speed hack" 
                                               FontSize="11" Foreground="#888888" 
                                               Margin="0,10,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#1E1E1E" BorderBrush="#9B59B6" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="🔭 Zoom Hack" FontSize="18" FontWeight="Bold" 
                                               Foreground="#BB86FC" Margin="0,0,0,10"/>

                                    <TextBlock x:Name="ZoomStatusText" 
                                               Text="Status: Not scanned" 
                                               FontSize="12" Foreground="#CCCCCC" 
                                               Margin="0,0,0,10"/>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" 
                                                Content="🔍 Scan Zoom" 
                                                Click="ScanZoomButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#0066CC"/>

                                        <Button Grid.Column="2" 
                                                x:Name="RestoreZoomButton"
                                                Content="↩️ Restore" 
                                                Click="RestoreZoomButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#E81123"
                                                IsEnabled="False"/>
                                    </Grid>

                                    <TextBlock Text="Zoom Level:" FontSize="14" Foreground="#CCCCCC" Margin="0,10,0,5"/>

                                    <Slider x:Name="ZoomSlider"
                                            Minimum="0.1"
                                            Maximum="0.63"
                                            Value="0.63"
                                            TickFrequency="0.05"
                                            IsSnapToTickEnabled="True"
                                            ValueChanged="ZoomSlider_ValueChanged"
                                            IsEnabled="False"
                                            Margin="0,0,0,5"/>

                                    <TextBlock x:Name="ZoomValueText" 
                                               Text="Current: 0.63 (Default)" 
                                               FontSize="12" Foreground="#CCCCCC" 
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,10"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="0.1" Click="ZoomPreset_Click" Tag="0.1"
                                                Style="{StaticResource ModernButton}" Background="#555555"
                                                Width="50" Margin="2" IsEnabled="False" x:Name="Zoom01Button"/>
                                        <Button Content="0.2" Click="ZoomPreset_Click" Tag="0.2"
                                                Style="{StaticResource ModernButton}" Background="#555555"
                                                Width="50" Margin="2" IsEnabled="False" x:Name="Zoom02Button"/>
                                        <Button Content="0.3" Click="ZoomPreset_Click" Tag="0.3"
                                                Style="{StaticResource ModernButton}" Background="#555555"
                                                Width="50" Margin="2" IsEnabled="False" x:Name="Zoom03Button"/>
                                        <Button Content="0.4" Click="ZoomPreset_Click" Tag="0.4"
                                                Style="{StaticResource ModernButton}" Background="#555555"
                                                Width="50" Margin="2" IsEnabled="False" x:Name="Zoom04Button"/>
                                        <Button Content="0.5" Click="ZoomPreset_Click" Tag="0.5"
                                                Style="{StaticResource ModernButton}" Background="#555555"
                                                Width="50" Margin="2" IsEnabled="False" x:Name="Zoom05Button"/>
                                    </StackPanel>

                                    <TextBlock x:Name="ZoomInfoText" 
                                               Text="Scan first to enable zoom hack. Lower values = more zoom out." 
                                               FontSize="11" Foreground="#888888" 
                                               Margin="0,10,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#1E1E1E" BorderBrush="#FFD700" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="🎯 Infinite Range (Melee)" FontSize="18" FontWeight="Bold" 
                                               Foreground="#FFD700" Margin="0,0,0,10"/>

                                    <Border Background="#4A3020" BorderBrush="#FFA500" BorderThickness="1" 
                                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="⚠️" FontSize="16" Foreground="#FFA500" 
                                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Requires game restart! Browse game folder first." 
                                                       FontSize="12" Foreground="#FFDDAA" 
                                                       VerticalAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock x:Name="RangeStatusText" 
                                               Text="Status: Not configured" 
                                               FontSize="12" Foreground="#CCCCCC" 
                                               Margin="0,0,0,10"/>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 x:Name="GamePathTextBox"
                                                 Height="35"
                                                 FontSize="12"
                                                 VerticalContentAlignment="Center"
                                                 Background="#3A3A3C"
                                                 Foreground="White"
                                                 BorderBrush="#FFD700"
                                                 BorderThickness="1"
                                                 Padding="10,0"
                                                 IsReadOnly="True"
                                                 Text="Click Browse to select game folder..."/>

                                        <Button Grid.Column="2"
                                                x:Name="BrowseGamePathButton"
                                                Content="📁 Browse" 
                                                Click="BrowseGamePathButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#FFA500"
                                                Width="100"/>
                                    </Grid>

                                    <TextBlock Text="Range Multiplier:" FontSize="14" Foreground="#CCCCCC" Margin="0,10,0,5"/>

                                    <Slider x:Name="RangeSlider"
                                            Minimum="1"
                                            Maximum="50"
                                            Value="10"
                                            TickFrequency="1"
                                            IsSnapToTickEnabled="True"
                                            ValueChanged="RangeSlider_ValueChanged"
                                            IsEnabled="False"
                                            Margin="0,0,0,5"/>

                                    <TextBlock x:Name="RangeValueText" 
                                               Text="Multiplier: 10x" 
                                               FontSize="14" Foreground="#FFD700" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,10"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                        <Button Content="3x" Click="RangePreset_Click" Tag="3"
                                                Style="{StaticResource ModernButton}" Background="#2D7D2D"
                                                Width="60" Margin="2" IsEnabled="False" x:Name="Range3Button"/>
                                        <Button Content="5x" Click="RangePreset_Click" Tag="5"
                                                Style="{StaticResource ModernButton}" Background="#0066CC"
                                                Width="60" Margin="2" IsEnabled="False" x:Name="Range5Button"/>
                                        <Button Content="10x" Click="RangePreset_Click" Tag="10"
                                                Style="{StaticResource ModernButton}" Background="#FFA500"
                                                Width="60" Margin="2" IsEnabled="False" x:Name="Range10Button"/>
                                        <Button Content="20x" Click="RangePreset_Click" Tag="20"
                                                Style="{StaticResource ModernButton}" Background="#E81123"
                                                Width="60" Margin="2" IsEnabled="False" x:Name="Range20Button"/>
                                        <Button Content="50x" Click="RangePreset_Click" Tag="50"
                                                Style="{StaticResource ModernButton}" Background="#9B0000"
                                                Width="60" Margin="2" IsEnabled="False" x:Name="Range50Button"/>
                                    </StackPanel>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                x:Name="ApplyRangeButton"
                                                Content="✅ Apply Range" 
                                                Click="ApplyRangeButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#00CC6A"
                                                IsEnabled="False"/>

                                        <Button Grid.Column="2"
                                                x:Name="RestoreRangeButton"
                                                Content="↩️ Restore" 
                                                Click="RestoreRangeButton_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="#E81123"
                                                IsEnabled="False"/>
                                    </Grid>

                                    <TextBlock x:Name="RangeInfoText" 
                                               Text="Browse for game folder first. Close game before applying changes!" 
                                               FontSize="11" Foreground="#888888" 
                                               Margin="0,10,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>

        <Border Grid.Row="2" Background="{StaticResource SurfaceColor}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Gray" Margin="0,0,10,0"/>
                    <TextBlock x:Name="StatusText" 
                               Text="Disconnected" 
                               FontSize="14"
                               Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ScanButton"
                            Content="🔍 Scan Maps"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource PrimaryColor}"
                            Margin="0,0,10,0"
                            Width="130"
                            Click="ScanButton_Click"
                            IsEnabled="False"/>

                    <Button x:Name="ApplyAllButton"
                            Content="✅ Apply All"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource AccentColor}"
                            Margin="0,0,10,0"
                            Width="120"
                            Click="ApplyAllButton_Click"
                            IsEnabled="False"/>

                    <Button x:Name="RestoreAllButton"
                            Content="↩️ Restore All"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource DangerColor}"
                            Width="130"
                            Click="RestoreAllButton_Click"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
